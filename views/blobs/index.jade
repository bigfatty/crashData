extends ../layout

block content
    h1.
         #{title}
    ul
        - each blob, i in blobs
            li
                = blob.date
                br
                = blob.name
                div#actionbuttons
                 form(action='/blobs/#{blob._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                 div
                    a(href='/#{blob._id}/edit') edit
                 div   
                    a(href='/#{blob._id}') show